int radius;
int top_x;
int top_y;
int bottom_y;

void setup() {
  size(800, 800);
  //smooth();
  background(255);

  rectMode(CENTER); // show bounding boxes
  fill(0);
  stroke(128);
  radius = 500;
  top_x = width/2;
  top_y = height/2;
  bottom_y = top_y;
}

PVector mouse_last = new PVector (mouseX, mouseY);
PVector mouse_now;
String x = "Not Yet Detected";
String y = "Not Yet Detected";

void draw() {
  background(255);
  mouse_now = new PVector (mouseX, mouseY);
  //text(c, x, y)
  mouse_last.sub(mouse_now);
  
  if (mouse_last.x == 0) {
    x = "";
  } else if (mouse_last.x < 0) {
    x = "Right and ";
  } else if (mouse_last.x > 0) {
    x = "Left and ";
  }
  
  
  
  println("X: " + mouse_last.x + ", Y: " + mouse_last.y);
  text(x + y, 20, 20);
  
  // arc(x, y, width, height, start, stop);
  arc(top_x, top_y, radius, radius, -PI, 0);  // upper half of circle
  arc(top_x, bottom_y, radius, radius, 0, PI);  // lower half of circle
  bottom_y += 1;//random(-10, 10);
  mouse_last = mouse_now;
}

